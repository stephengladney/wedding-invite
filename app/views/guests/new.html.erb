<html>
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Satisfy&family=Send+Flowers&family=Bitter&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        animation: fadein 2.5s ease-in;
        background-color: #ecd;
        font-family: Send Flowers;
        text-align: center;
        margin: 0px;
      }

      @keyframes fadein {
        0% {
          opacity: 0;
        }

        100% {
          opacity: 1;
        }
      }
      h1 {
        font-size: 4em;
        margin-top: 0px;
        margin-bottom: 0.25em;
        margin-top: -20px;
        text-shadow: 0 0 10px #fff, 0 0 10px #fff, 0 0 10px #fff, 0 0 10px #fff,
          0 0 10px #fff, 0 0 10px #fff, 0 0 10px #fff, 0 0 10px #fff;
      }

      h2 {
        font-family: Send Flowers;
        font-size: 3em;
        margin-top: 0;
        margin-bottom: 0.25em;
      }

      h3 {
        font-family: Send Flowers;
        font-size: 2.5em;
        margin-top: 0;
        margin-bottom: 0.5em;
      }

      #dice-image {
        height: 150px;
        width: auto;
      }

      .smallrose {
        height: 100px;
        width: auto;
      }

      .checkbox {
        border: 6px solid black;
        color: #c00;
        height: 75px;
        width: 75px;
        font-size: 60px;
        margin: 0px 50px;
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      .checkbox-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      #checkbox-container {
        display: flex;
        justify-content: center;
        width: 80%;
      }

      #nameinput {
        background: none;
        border: none;
        border-top: 1px solid #ecd;
        border-left: 1px solid #ecd;
        border-right: 1px solid #ecd;
        border-bottom: 5px solid black;
        color: #c00;
        font-family: Satisfy;
        font-size: 2.5em;
        font-weight: 200;
        padding: 0px;
        text-align: center;
        width: 80%;
      }

      #nameinput:focus {
        outline: none;
      }

      #nameinput-label {
        font-size: 2em;
        font-weight: 700;
      }

      #guest-selector {
        background: none;
        border: 0;
        color: #c00;
        font-size: 2.5em;
        font-family: Send Flowers;
        font-weight: 700;
        margin-left: 20px;
      }
      #guest-selector:focus {
        outline: none;
      }
      #guestcount-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 10px;
      }

      #submit {
        border: 5px solid black;
        background-color: transparent;
        color: #000;
        display: block;
        font-family: Bitter;
        font-size: 2em;
        font-weight: 700;
        letter-spacing: 2px;
        margin-top: 25px;
        padding: 10px 30px;
        transition: background-color 0.3s ease-in, color 0.3s ease-in;
      }
    </style>
  </head>
  <body>
    <%= image_tag ("dice.png"), id: "dice-image" %>
    <div style="display: flex; justify-content: center">
      <h1>Are you in?</h1>
    </div>
    <%= form_with scope: :guest, url: guests_path, local:true do |f| %>
    <input
      type="checkbox"
      id="attending"
      name="guest[attending]"
      style="display: none"
      value="true"
    />
    <div style="display: flex; justify-content: center">
      <div id="checkbox-container">
        <div class="checkbox-wrapper">
          <div
            class="checkbox"
            id="yescheckbox"
            onclick="selectAttending('yes')"
          ></div>
          <h2>Yes</h2>
        </div>
        <div class="checkbox-wrapper">
          <div
            class="checkbox"
            id="nocheckbox"
            onclick="selectAttending('no')"
          ></div>
          <h2>No</h2>
        </div>
      </div>
    </div>
    <input
      id="nameinput"
      name="guest[name]"
      required
      onchange="hideMultiGuest()"
    /><br />
    <label for="nameinput" id="nameinput-label">Your Name</label>
    <div id="guestcount-container">
      <h3 style="margin-bottom: 0">Attending:</h3>
      <div>
        <select id="guest-selector" name="guest[people]">
          <option value="1">1</option>
          <option id="twopeople" value="2">2</option>
        </select>
      </div>
    </div>
    <span
      style="
        font-size: 20px;
        font-family: Satisfy;
        font-style: italic;
        color: #c00;
      "
      >Tap the number to adjust</span
    >
    <div style="display: flex; justify-content: center">
      <input type="submit" id="submit" value="RSVP" name="commit" />
    </div>
    <% end %> <% if @guest.errors.any? %> <% @guest.errors.full_messages.each do
    |msg| %> <%= msg %> <% end %> <% end %>
  </body>
</html>
<script>
  const yesCheckbox = document.querySelector("#yescheckbox")
  const noCheckbox = document.querySelector("#nocheckbox")
  const realCheckbox = document.querySelector("#attending")

  function selectAttending(choice) {
    if (choice === "yes") {
      yesCheckbox.innerHTML = "X"
      noCheckbox.innerHTML = ""
      realCheckbox.checked = true
    } else {
      yesCheckbox.innerHTML = ""
      noCheckbox.innerHTML = "X"
      realCheckbox.checked = false
    }
  }

  const singles = ["george", "abel", "hillary", "thrills", "thrillz"]
  const input = document.querySelector("#nameinput")
  function hideMultiGuest() {
    singles.forEach((single) => {
      if (String(input.value).toLowerCase().includes(single)) {
        document.querySelector("#twopeople").style.display = "none"
      }
    })
  }
</script>
