<html>
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Satisfy&family=Send+Flowers&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #111;
        background-image: image-url("rose.jpeg");
        font-family: Send Flowers;
        text-align: center;
      }
      h1 {
        font-size: 3em;
        margin: 50px 50px 0.5em 50px;
        /* margin-bottom: 0.5em; */
      }

      h2 {
        font-family: Send Flowers;
        font-size: 3em;
        margin-top: 0;
        margin-bottom: 0.5em;
      }

      #main-container {
        background-color: rgba(255, 255, 255, 0.87);
        backdrop-filter: blur(4px);
        border: 4px solid #fdfdfd;
        border-radius: 35% 35% 0px 0px;
        cursor: pointer;
        display: block;
        left: 50%;
        position: absolute;
        max-width: 100%;
        /* padding: 80px; */
        top: 50%;
        transform: translate(-50%, -50%);
      }

      #dice-image {
        height: 200px;
        width: auto;
        border-radius: 25% 25% 0 0;
        opacity: 0.75;
      }

      .smallrose {
        height: 100px;
        width: auto;
      }

      .checkbox {
        border: 6px solid black;
        color: #c00;
        height: 75px;
        width: 75px;
        font-size: 60px;
        margin: 0px 50px;
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      #yesbox {
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
      }

      #nobox {
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
      }

      .checkbox-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      #checkbox-container {
        display: flex;
        justify-content: center;
        width: 80%;
      }

      #nameinput {
        background: none;
        border: none;
        border-top: 1px solid red;
        border-bottom: 5px solid black;
        color: #c00;
        font-family: Satisfy;
        font-size: 2.5em;
        font-weight: 200;
        /* margin-top: 10px; */
        text-align: center;
        width: 80%;
      }

      #nameinput:focus {
        outline: none;
      }

      #nameinput-label {
        font-size: 2em;
        font-weight: 700;
      }

      #guest-selector {
        background: none;
        border: 0;
        color: #c00;
        padding: 10px;
        font-size: 2.5em;
        font-family: Send Flowers;
        font-weight: 700;
        margin-left: 20px;
      }
      #guest-selector:focus {
        outline: none;
      }
      #guestcount-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
      }

      button {
        border: 5px solid black;
        background-color: #fff;
        color: #000;
        cursor: pointer;
        font-size: 2em;
        font-weight: 700;
        margin-top: 40px;
        margin-bottom: 20px;
        padding: 10px;
        width: 100%;
        transition: background-color 0.3s ease-in, color 0.3s ease-in;
      }
      button:hover {
        background-color: #000;
        color: #fff;
      }
    </style>
  </head>
  <body>
    <div id="main-container">
      <div style="display: flex; justify-content: center">
        <h1>Are you in?</h1>
      </div>
      <div style="display: flex; justify-content: center">
        <div id="checkbox-container">
          <div class="checkbox-wrapper">
            <div
              class="checkbox"
              id="yescheckbox"
              onclick="selectAttending('yes')"
            >
              <div id="yesbox">X</div>
            </div>
            <h2>Yes</h2>
          </div>
          <div class="checkbox-wrapper">
            <div
              class="checkbox"
              id="nocheckbox"
              onclick="selectAttending('no')"
            >
              <div id="nobox">X</div>
            </div>
            <h2>No</h2>
          </div>
        </div>
      </div>
      <input id="nameinput" /><br />
      <label for="nameinput" id="nameinput-label">Your Name</label>
      <div id="guestcount-container">
        <h2 style="margin-bottom: 0">Attending:</h2>
        <div>
          <select id="guest-selector">
            <option value="1">1</option>
            <option value="2">2</option>
          </select>
        </div>
      </div>
      <button>RSVP</button>
    </div>

    <!-- <%= render "form", guest: @guest %> -->
  </body>
</html>
<script>
  const yesCheckbox = document.querySelector("#yesbox")
  const noCheckbox = document.querySelector("#nobox")

  function selectAttending(choice) {
    if (choice === "yes") {
      yesCheckbox.style.opacity = 1
      noCheckbox.style.opacity = 0
    } else {
      yesCheckbox.style.opacity = 0
      noCheckbox.style.opacity = 1
    }
  }
</script>
