<html>
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Amatic+SC&family=Send+Flowers&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: Send Flowers;
        text-align: center;
      }
      h1 {
        font-size: 4em;
        margin-top: 0;
        margin-bottom: 0.5em;
      }

      h2 {
        font-family: Send Flowers;
        font-size: 3em;
        margin-top: 0;
        margin-bottom: 0.5em;
      }

      #main-container {
        display: block;
        margin: auto;
        max-width: 500px;
      }

      #dice-image {
        height: 200px;
        width: auto;
      }

      .checkbox {
        border: 8px solid black;
        height: 100px;
        width: 100px;
        font-size: 80px;
      }

      .checkbox-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      #checkbox-container {
        display: flex;
        justify-content: space-between;
        width: 80%;
      }

      #nameinput {
        border: none;
        border-bottom: 5px solid black;
        color: #333;
        font-family: Amatic SC;
        font-size: 2.5em;
        font-weight: 200;
        margin-top: 30px;
        text-align: center;
        width: 100%;
      }

      #nameinput-label {
        font-size: 3em;
        font-weight: 700;
      }

      #guest-selector {
        font-size: 2.5em;
        padding: 10px;
        border: 0;
      }
      #guest-selector:focus {
        outline: none;
      }
      #guestcount-container {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <div id="main-container">
      <%= image_tag ("dice.jpeg"), id: "dice-image" %>
      <h1>Are you in?</h1>
      <div style="display: flex; justify-content: center">
        <div id="checkbox-container">
          <div class="checkbox-wrapper">
            <div
              class="checkbox"
              id="yescheckbox"
              onclick="selectAttending('yes')"
            ></div>
            <h2>Yes</h2>
          </div>
          <div class="checkbox-wrapper">
            <div
              class="checkbox"
              id="nocheckbox"
              onclick="selectAttending('no')"
            ></div>
            <h2>No</h2>
          </div>
        </div>
      </div>
      <input id="nameinput" /><br />
      <label for="nameinput" id="nameinput-label">Your Name</label>
      <div id="guestcount-container">
        <h2 style="margin-bottom: 0">Attending:</h2>
        <div>
          <select id="guest-selector">
            <option value="1">1</option>
            <option value="2">2</option>
          </select>
        </div>
      </div>
    </div>

    <!-- <%= render "form", guest: @guest %> -->
  </body>
</html>
<script>
  const yesCheckbox = document.querySelector("#yescheckbox")
  const noCheckbox = document.querySelector("#nocheckbox")

  function selectAttending(choice) {
    if (choice === "yes") {
      yesCheckbox.innerHTML = "X"
      noCheckbox.innerHTML = ""
    } else {
      noCheckbox.innerHTML = "X"
      yesCheckbox.innerHTML = ""
    }
  }
</script>
